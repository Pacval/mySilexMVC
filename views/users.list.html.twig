<h1>Liste des utilisateurs</h1>
<form method="get" name="formulaire" action="{{ url('users.new') }}">
    <button type="submit">Ajouter</button>
</form>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>SEXE</th>
            <th>NOM</th>
            <th>PRENOM</th>
            <th>AGE</th>
            <th>VILLE</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbdoy> {% for user in users %}
        <tr>
            <td>{{user.id}}</td>
            <td>{{user.sexe}}</td>
            <td>{{user.nom}}</td>
            <td>{{user.prenom}}</td>
            <td>{{user.age}}</td>
            <td>{{user.ville}}</td>
            <td>
                <form method="post" name="formulaire" action="{{ url('users.delete', {id: user.id}) }}">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
            <td>
                <form method="get" name="formulaire" action="{{ url('users.edit', {id: user.id}) }}">
                    <button type="submit">Modifier</button>
                </form>
            </td>
        </tr> {% endfor %} </tbdoy>
</table>

<br><br>

<div>La requête de création de la base de données se situe dans le fichier README.txt</div>